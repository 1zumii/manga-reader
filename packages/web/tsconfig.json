{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "$components/*": [
        "./src/components/*"
      ],
      "$pages/*": [
        "./src/pages/*"
      ],
      "$utils/*": [
        "./src/utils/*"
      ],
      "$types/*": [
        "./src/types/*"
      ],
      "$src/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client"
    ],
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  }
}
